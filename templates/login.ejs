<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company|Login</title>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>

    <%- include("partials/navbar.ejs") %>

        <div class="mainbody">
            <div class="left">
                <img class="leftin image"
                    src="https://preview.colorlib.com/theme/bootstrap/login-form-08/images/undraw_file_sync_ot38.svg"
                    alt="">
            </div>

            <div class="right">
                <form class="form" action="/signup">
                    <h2>Login</h2>
                    <input class="input" type="text" name="email" required placeholder="E-mail" />
                    <div class="email error"></div>

                    <input class="input" type="password" name="password" required placeholder="Password" />
                    <div class="password error"></div>
                    <button class="btn button">Login</button>
                </form>
            </div>
        </div>

        <%- include("partials/footer.ejs") %>

            <script src="/js/login.js"></script>

</body>

</html>